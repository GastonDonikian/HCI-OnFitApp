<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/login_navigation"
        app:startDestination="@id/login">

    <fragment
            android:id="@+id/login"
            android:name="com.example.hci_onfitapp.fragments.LoginFragment"
            android:label="fragment_welcome"
            tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_welcome_to_loginFragment"
            app:destination="@id/login"
            app:enterAnim="@anim/nav_default_pop_enter_anim"
            app:exitAnim="@anim/nav_default_pop_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim">
            <argument
                android:name="RoutineId"
                app:argType="string"
                app:nullable="true"
                android:defaultValue="@null"/>
            <argument
                android:name="RouitineId"
                android:defaultValue="@null" />
        </action>
    </fragment>

    <fragment
        android:id="@+id/home"
        android:name="com.example.hci_onfitapp.fragments.HomeFragment"
        android:label="fragment_welcome"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_welcome_to_loginFragment"
            app:destination="@id/login"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim">
            <argument
                android:name="RoutineId"
                app:argType="string"
                app:nullable="true"
                android:defaultValue="@null"/>
            <argument
                android:name="RouitineId"
                android:defaultValue="@null" />
        </action>
        <action
            android:id="@+id/action_welcome_to_registerFragment"
            app:destination="@id/login"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim">

            <argument
                android:name="RoutineId"
                app:argType="string"
                app:nullable="true"
                android:defaultValue="@null"/>

        </action>
        <argument
            android:name="RoutineId"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />


    </fragment>

</navigation>