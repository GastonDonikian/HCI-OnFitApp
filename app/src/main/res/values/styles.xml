<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Titles" parent="@android:style/Widget.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Titles.RoutineTitle">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="Titles.AuthorTitle">
        <item name="android:textSize">18sp</item>
    </style>


    <style name="TextBody" parent="@android:style/Widget.TextView">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextBody.Description">
        <item name="android:textColor">@color/purple</item>
    </style>

    <style name="SwitchButtom" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/purple</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">#758591FF</item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/gray</item>
    </style>
</resources>